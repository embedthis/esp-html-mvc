/*
    expansive.json - Configuration for esp-mvc-skeleton
 */
{
    control: {
        script: "function menu(item) meta.menu == item ? 'active' : ''"
    },
    services: {
        'clean-css': true,
        'compile-less-css': {
            stylesheet: 'css/all.css'
        }
    },
    debug: {
        services: {
            'compile-html': false,
            'minify-css':   false,
            'minify-js':    false
        }
    },
    release: {
        services: {
            'minify-css': true
        }
    }
}
